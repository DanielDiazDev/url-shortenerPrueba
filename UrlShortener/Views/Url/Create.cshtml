@model Url

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Acortar nueva URL</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="originalUrl">URL original</label>
        <input type="text" id="originalUrl" name="OriginalUrl" class="form-control" 
               value="@Model.OriginalUrl"/>
        <span asp-validation-for="OriginalUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Acortar" class="btn btn-primary"/>
    </div>
</form>
<a asp-action="Index">Volver a la lista de URLs</a>
